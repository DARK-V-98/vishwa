rules_version = '2';

// NOTE: To fix CORS errors during development, you may need to apply a cors.json file
// to your bucket. Run `npm run update:cors` from your terminal to do this.
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read for all
    match /{allPaths=**} {
      allow read;
    }

    // Allow write only for authenticated users on specific paths
    match /tournaments/{fileName} {
      allow write: if request.auth != null;
    }
     match /testimonials/{fileName} {
      allow write: if request.auth != null;
    }
     match /topup-packages/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
