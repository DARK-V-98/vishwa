rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isDeveloper() {
        return exists(/databases/$(database)/documents/roles_developer/$(request.auth.uid));
    }

    function isCustomer() {
        return exists(/databases/$(database)/documents/roles_customer/$(request.auth.uid));
    }

    function isExistingOwner(userId) {
        return (isSignedIn() && isOwner(userId) && resource.data.id == userId);
    }

    /**
     * @description Controls access to user account information.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) User with ID 'user123' can create their own document.
     * @deny (create) User with ID 'user123' cannot create a document with a different ID ('user456').
     * @allow (get) User with ID 'user123' can read their own document.
     * @deny (get) User with ID 'user123' cannot read another user's document.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree, validates relational integrity between documents.
     */
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow update: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to user profile information.
     * @path /databases/{database}/documents/userProfiles/{profileId}
     * @allow (create) User can create their own profile if the userId matches.
     * @deny (create) User cannot create a profile for another user.
     * @allow (get) User can read their own profile if the userId matches.
     * @deny (get) User cannot read another user's profile.
     * @principle Enforces document ownership for writes, restricts access to a user's own data tree.
     */
    match /userProfiles/{profileId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if false;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Controls access to admin role assignments.
     * @path /databases/{database}/documents/roles_admin/{userId}
     * @allow (create) Only an admin can assign the admin role to another user.
     * @deny (create) A regular user cannot assign the admin role.
     * @allow (get) Only an admin or the user themselves can view their admin role document.
     * @deny (get) A regular user cannot view another user's admin role document.
     * @principle Enforces role-based access control.
     */
    match /roles_admin/{userId} {
      allow create: if isAdmin();
      allow get: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to developer role assignments.
     * @path /databases/{database}/documents/roles_developer/{userId}
     * @allow (create) Only an admin can assign the developer role to another user.
     * @deny (create) A regular user cannot assign the developer role.
     * @allow (get) Only an admin or the user themselves can view their developer role document.
     * @deny (get) A regular user cannot view another user's developer role document.
     */
    match /roles_developer/{userId} {
        allow create: if isAdmin();
        allow get: if isAdmin() || isOwner(userId);
        allow list: if isAdmin();
        allow update: if false;
        allow delete: if isAdmin();
    }

    /**
     * @description Controls access to customer role assignments.
     * @path /databases/{database}/documents/roles_customer/{userId}
     * @allow (create) Only an admin can assign the customer role to another user.
     * @deny (create) A regular user cannot assign the customer role.
     * @allow (get) Only an admin or the user themselves can view their customer role document.
     * @deny (get) A regular user cannot view another user's customer role document.
     */
    match /roles_customer/{userId} {
        allow create: if isAdmin();
        allow get: if isAdmin() || isOwner(userId);
        allow list: if isAdmin();
        allow update: if false;
        allow delete: if isAdmin();
    }

    /**
     * @description Controls access to client project data.
     * @path /databases/{database}/documents/projects/{projectId}
     * @allow (get) Any user can read project data.
     * @allow (list) Any user can list project data.
     * @allow (create) Only authenticated users can create projects and must own the project.
     * @deny (create) Users cannot create a project for another user.
     * @allow (update) Only the project owner can update project data.
     * @deny (update) Users cannot update projects they don't own.
     * @allow (delete) Only the project owner can delete project data.
     * @deny (delete) Users cannot delete projects they don't own.
     * @principle Public read with owner-only writes.
     */
    match /projects/{projectId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.clientId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }

    /**
     * @description Controls access to client design order data.
     * @path /databases/{database}/documents/designOrders/{orderId}
     * @allow (get) Any user can read design order data.
     * @allow (list) Any user can list design order data.
     * @allow (create) Only authenticated users can create design orders and must own the order.
     * @deny (create) Users cannot create a design order for another user.
     * @allow (update) Only the design order owner can update design order data.
     * @deny (update) Users cannot update design orders they don't own.
     * @allow (delete) Only the design order owner can delete design order data.
     * @deny (delete) Users cannot delete design orders they don't own.
     * @principle Public read with owner-only writes.
     */
    match /designOrders/{orderId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.clientId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }

    /**
     * @description Controls access to pricing information.
     * @path /databases/{database}/documents/pricing/{pricingId}
     * @allow (create) Only admins can create pricing data.
     * @deny (create) Regular users cannot create pricing data.
     * @allow (get) Any user can read pricing data.
     */
    match /pricing/{pricingId} {
        allow create: if isAdmin();
        allow get: if true;
        allow list: if true;
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
  }
}