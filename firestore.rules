/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for personal data and uses database-based access control (DBAC) for administrative roles.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information. User's can only manage their own accounts.
 * - /userProfiles/{profileId}: Stores user profile information.
 * - /roles_admin/{userId}, /roles_developer/{userId}, /roles_customer/{userId}: Collections that grant roles based on document existence.
 * - /projects/{projectId}: Stores project data. Only the project owner can manage projects.
 * - /designOrders/{orderId}: Stores design orders. Only the order owner can manage design orders.
 * - /pricing/{pricingId}: Stores pricing data.
 *
 * Key Security Decisions:
 * - User data is strictly controlled by the owning user.
 * - Listing of users and user profiles is disallowed.
 * - Administrative, developer, and customer roles are granted via document existence in dedicated collections.
 * - Write operations must be authenticated.
 *
 * Denormalization for Authorization:
 * - User documents include the 'profileId' to link to the user profile, eliminating the need for `get()` calls to determine ownership.
 *
 * Structural Segregation:
 * - User profiles and role collections are stored separately to apply different security postures.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to manage their own user accounts.
     * @path /users/{userId}
     * @allow (create) User with matching id can create their account.
     * @allow (get, update, delete) Authenticated user can get, update, or delete their own account.
     * @deny (create) User attempts to create an account with a different id.
     * @deny (get, update, delete) Unauthorized user attempts to access another user's account.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource.data.id == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == request.auth.uid;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows users to manage their own user profiles.
     * @path /userProfiles/{profileId}
     * @allow (create) User with matching userId can create their profile.
     * @allow (get, update, delete) Authenticated user can get, update, or delete their own profile.
     * @deny (create) User attempts to create a profile with a different userId.
     * @deny (get, update, delete) Unauthorized user attempts to access another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /userProfiles/{profileId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwnerByProfileId(profileId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId == profileId;
      }
      function isExistingOwnerByProfileId(profileId) {
        return isOwnerByProfileId(profileId) && resource.data.userId == request.auth.uid;
      }

      allow get: if isOwnerByProfileId(profileId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isExistingOwnerByProfileId(profileId) && request.resource.data.userId == request.auth.uid;
      allow delete: if isExistingOwnerByProfileId(profileId);
    }

    /**
     * @description Allows admins to be created by backend only, admins can list all admins.
     * @path /roles_admin/{userId}
     * @allow (create) Only the backend can create admin accounts.
     * @allow (get) Authenticated user can get their own admin role.
     * @deny (create) Non-backend attempts to create admin roles.
     * @deny (get) Unauthorized user attempts to access admin roles.
     * @principle Enforces role-based access control.
     */
    match /roles_admin/{userId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

        allow get: if isSignedIn() && request.auth.uid == userId;
        allow list: if isAdmin();
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows developers to be created by backend only, admins can list all developers.
     * @path /roles_developer/{userId}
     * @allow (create) Only the backend can create developer accounts.
     * @allow (get) Authenticated user can get their own developer role.
     * @deny (create) Non-backend attempts to create developer roles.
     * @deny (get) Unauthorized user attempts to access developer roles.
     * @principle Enforces role-based access control.
     */
    match /roles_developer/{userId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }
        function isDeveloper() {
            return exists(/databases/$(database)/documents/roles_developer/$(request.auth.uid));
        }

        allow get: if isSignedIn() && request.auth.uid == userId;
        allow list: if isAdmin();
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows customers to be created by backend only, admins can list all customers.
     * @path /roles_customer/{userId}
     * @allow (create) Only the backend can create customer accounts.
     * @allow (get) Authenticated user can get their own customer role.
     * @deny (create) Non-backend attempts to create customer roles.
     * @deny (get) Unauthorized user attempts to access customer roles.
     * @principle Enforces role-based access control.
     */
    match /roles_customer/{userId} {
        function isSignedIn() {
            return request.auth != null;
        }
        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }
        function isCustomer() {
            return exists(/databases/$(database)/documents/roles_customer/$(request.auth.uid));
        }

        allow get: if isSignedIn() && request.auth.uid == userId;
        allow list: if isAdmin();
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Allows project owners to manage their own projects.
     * @path /projects/{projectId}
     * @allow (create) Authenticated user can create a project.
     * @allow (get, update, delete) Authenticated user can get, update, or delete their own project.
     * @deny (create) User attempts to create a project with a different ownerId.
     * @deny (get, update, delete) Unauthorized user attempts to access another user's project.
     * @principle Enforces document ownership for writes.
     */
    match /projects/{projectId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(clientId) {
        return isSignedIn() && request.auth.uid == clientId;
      }
      function isExistingOwner(clientId) {
        return isOwner(clientId) && resource.data.clientId == clientId;
      }

      allow get: if isOwner(resource.data.clientId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.clientId) && request.resource.data.clientId == request.auth.uid;
      allow delete: if isExistingOwner(resource.data.clientId) && request.resource.data.clientId == request.auth.uid;
    }

    /**
     * @description Allows design order owners to manage their own design orders.
     * @path /designOrders/{orderId}
     * @allow (create) Authenticated user can create a design order.
     * @allow (get, update, delete) Authenticated user can get, update, or delete their own design order.
     * @deny (create) User attempts to create a design order with a different ownerId.
     * @deny (get, update, delete) Unauthorized user attempts to access another user's design order.
     */
    match /designOrders/{orderId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(clientId) {
        return isSignedIn() && request.auth.uid == clientId;
      }
      function isExistingOwner(clientId) {
        return isOwner(clientId) && resource.data.clientId == clientId;
      }
       function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

      allow get: if isOwner(resource.data.clientId) || isAdmin();
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.clientId) || isAdmin();
      allow delete: if isExistingOwner(resource.data.clientId) || isAdmin();
    }

     /**
      * @description Allows admins to manage pricing information.
      * @path /pricing/{pricingId}
      */
    match /pricing/{pricingId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

        allow get: if isAdmin();
        allow list: if isAdmin();
        allow create: if isAdmin();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }
  }
}