
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for primary admin email OR if the user has a specific custom role in their user document.
      let isPrimaryAdmin = request.auth.token.email == 'tikfese@gmail.com';
      let hasAdminRole;
      try {
        hasAdminRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'developer']);
      } catch (e) {
        hasAdminRole = false;
      }
      return isPrimaryAdmin || hasAdminRole;
    }

    // User profiles can be created by any signed-in user for their own UID.
    // They can only be read/updated by their owner or an admin.
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get, update: if (isSignedIn() && isOwner(userId)) || isAdmin();
      allow delete: if isAdmin();
      allow list: if isAdmin();
    }

    // User-specific subcollections are only accessible by their owner or an admin.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if (isSignedIn() && isOwner(userId)) || isAdmin();
    }
    
    // Design Orders collection for admin management
    match /designOrders/{orderId} {
        allow read, list, update: if isAdmin();
        allow create: if isSignedIn();
    }
    
    // Projects collection for quotation generator
    match /projects/{projectId} {
        allow read, list, update: if isAdmin();
        allow create: if isSignedIn();
    }

    // Services are public to read, but only admins can write.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Products are public to read.
    // Writes are restricted to the product's seller or an admin.
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.sellerId) || isAdmin());
    }

    // Top-up packages are public to read, but only admins can write.
    match /topupPackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Anyone can create a top-up order.
    // Only the user who created it or an admin can read it.
    // Only admins can update/delete it.
    match /topupOrders/{orderId} {
      allow create: if true;
      allow get, list: if (isSignedIn() && isOwner(resource.data.userId)) || isAdmin();
      allow update, delete: if isAdmin();
    }

    // Global settings are public to read, but only admins can write.
    match /settings/{settingId} {
        allow get: if true;
        allow write: if isAdmin();
    }

    // Chat document access rules
    match /chats/{userId} {
        // Users can create/update their own chat document. Admins can access any.
        allow get, create, update: if (isSignedIn() && isOwner(userId)) || isAdmin();
        // Admins can list all chats for the admin panel.
        allow list: if isAdmin();
    }
    
    // Messages within a chat can be read by the user or an admin.
    // Messages can only be created by the sender.
    match /chats/{userId}/messages/{messageId} {
        allow read, list: if (isSignedIn() && isOwner(userId)) || isAdmin();
        allow create: if isSignedIn() && isOwner(request.resource.data.senderId);
    }
    
    // Testimonials are public to read, but only admins can write.
    match /testimonials/{testimonialId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
