
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for primary admin email OR if the user has a specific custom role in their user document.
      return request.auth.token.email == 'tikfese@gmail.com'
             || (exists(/databases/$(database)/documents/users/$(request.auth.uid))
                 && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['admin', 'developer']));
    }

    // User profiles can only be read/written by their owner or an admin.
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get, update, delete: if (isSignedIn() && isOwner(userId)) || isAdmin();
      allow list: if isAdmin();
    }

    // User-specific subcollections are only accessible by their owner.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, list, create, update, delete: if isSignedIn() && isOwner(userId);
    }
    
    // Design Orders collection for admin management
    match /designOrders/{orderId} {
        allow read, list, update: if isSignedIn() && isAdmin();
        allow create: if isSignedIn();
    }
    
    // Projects collection for quotation generator
    match /projects/{projectId} {
        allow read, list, update: if isSignedIn() && isAdmin();
        allow create: if isSignedIn();
    }

    // Services are public to read, but only admins can write.
    match /services/{serviceId} {
      allow get, list: if true;
      allow write: if isSignedIn() && isAdmin();
    }
    
    // Products are public to read.
    // Writes are restricted to the product's seller or an admin.
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.sellerId) || isAdmin());
    }

    // Top-up packages are public to read, but only admins can write.
    match /topupPackages/{packageId} {
      allow get, list: if true;
      allow write: if isSignedIn() && isAdmin();
    }
    
    // Anyone can create a top-up order.
    // Only the user who created it or an admin can read it.
    // Only admins can update/delete it.
    match /topupOrders/{orderId} {
      allow create: if true;
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin(); // Allow admins to list all orders
      allow update, delete: if isSignedIn() && isAdmin();
    }

    // Global settings are public to read, but only admins can write.
    match /settings/{settingId} {
        allow get: if true;
        allow write: if isSignedIn() && isAdmin();
    }

    // CHAT RULES
    match /chats/{chatId} {
        // Admins can list all chat documents to populate the admin panel.
        allow list: if isAdmin();

        // A user can read/write their own chat document. An admin can access any.
        allow get, create, update: if (isSignedIn() && isOwner(chatId)) || isAdmin();

        // Rules for the messages subcollection within each chat
        match /messages/{messageId} {
          // The user who owns the chat or an admin can read the messages.
          allow read, list: if (isSignedIn() && isOwner(chatId)) || isAdmin();
          // A message can only be created by the authenticated sender.
          allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
        }
    }
    
    // Testimonials are public to read, but only admins can write.
    match /testimonials/{testimonialId} {
        allow get, list: if true;
        allow write: if isSignedIn() && isAdmin();
    }
  }
}
