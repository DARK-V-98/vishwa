/**
 * @fileoverview Firestore Security Rules for VishwaVerse platform.
 *
 * Core Philosophy:
 * This ruleset employs a hybrid security model, balancing open access for public content with strict, role-based access control for user data and administrative functions.  It emphasizes simplicity, maintainability, and performance.  It leverages a combination of path-based ownership, role-based checks, and denormalized data to minimize `get()` calls and enforce clear access boundaries.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information.  User-owned.
 * - /userProfiles/{profileId}: Stores user profile data.  User-owned, linked via the `profileId` in the user document and the `userId` field in the profile document.
 * - /roles_admin/{userId}: Presence of a document grants admin role.
 * - /roles_developer/{userId}: Presence of a document grants developer role.
 * - /roles_customer/{userId}: Presence of a document grants customer role.
 * - /projects/{projectId}: Stores project data.
 * - /designOrders/{orderId}: Stores design order data.
 *
 * Key Security Decisions:
 * - No user listing: The `list` operation is denied on the `users` collection to protect user privacy.
 * - Role-based access: Administrative and developer privileges are granted based on the presence of documents in the `roles_admin` and `roles_developer` collections, respectively. This existence-based check simplifies the rules.
 * - Customer role is also granted via DBAC with the `roles_customer` collection.
 * - Public read for projects and designOrders: Read access to projects and designOrders is public, while write access is restricted to owners.
 *
 * Denormalization for Authorization:
 * - The `users/{userId}` document contains the `profileId`, which is used for path-based authorization on `/userProfiles/{profileId}`. This avoids the need for a `get()` call to verify user ownership of the profile.
 *
 * Structural Segregation:
 * - User profiles and roles are stored in separate collections to enforce different security policies.  This prevents accidental exposure of sensitive user data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @path N/A
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @path N/A
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId and the resource exists.
     * @path N/A
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource.data.id);
    }

        /**
         * @description Checks if the user has the 'admin' role.
         * @path N/A
         */
        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

        /**
         * @description Checks if the user has the 'developer' role.
         * @path N/A
         */
        function isDeveloper() {
            return exists(/databases/$(database)/documents/roles_developer/$(request.auth.uid));
        }

        /**
         * @description Checks if the user has the 'customer' role.
         * @path N/A
         */
        function isCustomer() {
            return exists(/databases/$(database)/documents/roles_customer/$(request.auth.uid));
        }


    /**
     * @description Manages access to user documents.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Manages access to user profile documents.
     * @path /userProfiles/{profileId}
     */
    match /userProfiles/{profileId} {
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Manages access to admin role documents.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
        allow get, list: if isAdmin();
        allow create: if isAdmin();
        allow update: if false;
        allow delete: if isAdmin();
    }

      /**
       * @description Manages access to developer role documents.
       * @path /roles_developer/{userId}
       */
      match /roles_developer/{userId} {
          allow get, list: if isDeveloper() || isAdmin();
          allow create: if isAdmin();
          allow update: if false;
          allow delete: if isAdmin();
      }

        /**
         * @description Manages access to customer role documents.
         * @path /roles_customer/{userId}
         */
        match /roles_customer/{userId} {
            allow get, list: if isCustomer() || isAdmin();
            allow create: if isAdmin();
            allow update: if false;
            allow delete: if isAdmin();
        }

    /**
     * @description Manages access to project documents.
     * @path /projects/{projectId}
     */
    match /projects/{projectId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
        allow update: if isSignedIn() && resource.data.clientId == resource.data.clientId;
        allow delete: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }

    /**
     * @description Manages access to design order documents.
     * @path /designOrders/{orderId}
     */
    match /designOrders/{orderId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
        allow update: if isSignedIn() && resource.data.clientId == resource.data.clientId;
        allow delete: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
    }
  }
}